{
  "description": "_description",
  "processors": [
    {
      "grok" : {
        "field": "message",
        "patterns": ["%{SYSLOGTIMESTAMP:timestamp} %{SYSLOGHOST:logsource} <%{WORD:facility}.%{WORD:priority}> %{SYSLOGPROG}:%{WORD:result} password for( invalid user)? %{USERNAME:username} from %{IPORHOST:source_host}.*"]
      }
    },
    {
      "date" : {
        "field" : "timestamp",
        "formats" : ["MMM  d HH:mm:ss", "MMM dd HH:mm:ss"],
        "timezone" : "Asia/Tokyo"
      }
    },
    {
       "date_index_name": {
         "field": "@timestamp",
         "index_name_prefix": "secure-",
         "date_rounding": "d"
       }
    }
  ]
}
